<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
          
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>

    <dependencySets>
        <dependencySet>
            <scope>provided</scope>
            <outputDirectory>/war</outputDirectory>
            <includes>
                <include>*:war:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
        <outputDirectory>/installer/lib</outputDirectory>
            <scope>provided</scope>
            <includes>
                <include>org.apache.ant:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

	<fileSets>
		<fileSet>
			<directory>target/jetty-distribution-7.2.1.v20101111</directory>
			<outputDirectory>/jetty</outputDirectory>
		</fileSet>
        <fileSet>
            <directory>src/jetty</directory>
            <outputDirectory>/jetty</outputDirectory>
            <includes>
                <include>start.ini</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/jetty/contexts</directory>
            <outputDirectory>/jetty/contexts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/jetty/etc</directory>
            <outputDirectory>/jetty/etc</outputDirectory>
        </fileSet>
	</fileSets>

</assembly>